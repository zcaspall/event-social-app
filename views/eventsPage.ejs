<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events</title>
</head>
<body>
    <form action="/events?location=" method="get" id="search-form">
        <input type="range" min="1" max="300" value="50" name="search-radius" id="radius">
        <div id="radius-buttons">
            <input type="radio" name="miles" id="radius-miles">
            <label for="miles">Miles</label>

            <input type="radio" name="km" id="radius-km">
            <label for="km">Kilometers</label>
        </div>
        <label for="search">Search:</label>
        <input type="search" name="search" id="search-bar" value="Enter keyword or address...">
        <button type="submit">Search</button>
    </form>
    <h1>Events</h1>
    <% if (events.length === 0) { %>
        <p>No events found.</p>
    <% } else { %>
        <% for (const event of events) { %>
            <a href="/events/<%= event.eventId %>">
                <div class="event-card">
                    <h2><%= event.eventName %></h2>
                    <img src="images/eventImages/<%= event.imageId %>">
                    <p><%= event.eventDescription %></p>
                    <p><%= event.locationName %></p>
                    <p><%= event.eventDate %></p>
                </div>
            </a>
        <% } %>
    <% } %>
</body>
</html>